<% if !@academics.empty? %>
  <div class="resume_card">
    <h4 class="heading-small text-purple mb-4"> <i class="ni ni-paper-diploma"></i> Accademic training</h4>
  </div>
  <ol>
    <% @academics.each do |academic| %>
    <li><%= academic.name %></li>
    <div class="row">
      <div class="col">
        <a class="btn btn-primary btn-sm" data-remote="true" data-method="get" href="<%= edit_academic_path(academic) %>"><%= fa_icon 'edit' %> Edit</a>
        <a class="btn btn-primary btn-sm" data-toggle="modal"
          data-target="#<%= deletion_modal_id(academic) %>">
          <%= fa_icon 'trash' %> Delete
        </a>
        <%= render partial: 'shared/modals/confirmation', locals: {
          id: deletion_modal_id(academic),
          title: 'Are you sure?',
          heading_1: "DANGER",
          heading_2: "You're are deleted your personnal infor:",
          path: academic_path(academic),
          method: 'delete',
          confirm_button: 'Delete'
        } %>
      </div>
    </div>
    <div class="">
      <small>
        <%= academic.description %>
      </small>
    </div>
    <span class="text-warning text-sm"><i class="ni ni-calendar-grid-58"></i> <%= academic.obtention_year %></span>
    <span class="text-warning text-sm ml-3"><i class="ni ni-hat-3"></i> <%= academic.school %></span>
     <div class="separateur"></div>
     <% end %>
  </ol>
<% end %>

<div class="col-12">
  <%= form_for @personal, local: true, remote: true do |f| %>
      <div class="card-header">
        <div class="row">
          <div class="col-12">
            <%= render partial: 'shared/alerts/errors', locals: { resource: @personal} %>
          </div>
        </div>
      </div>
      <div class="form-group">
      <label class="text-sm "for="">Gender</label>
      <%= f.select(:gender, options_for_select([['male', 1],
                              ['female', 2],
                              ['Other', 3]
                              ]),class:"form-control", prompt:"Choose your gender") %>
    </div>
    <div class="form-group">
      <div class="input-group input-group-merge input-group-alternative">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="ni ni-align-left-2"></i></span>
        </div>
        <%= f.number_field :children, class:"form-control", placeholder:"number of children" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group input-group-merge input-group-alternative">
        <%= f.date_field :birth_day, class:"form-control", placeholder:"Your birth day" %>
      </div>
    </div>
    <div class="form-group">
      <label class="text-sm "for="">Marital statut</label>
      <%= f.select(:marital_statut, options_for_select([['Single', 1],
                              ['Married', 2]
                              ]),class:"form-control",prompt:"Marital statut" ) %>
    </div>
    <div class="form-group">
      <label class="text-sm" for="">language</label>
      <div class="input-group input-group-merge input-group-alternative">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="ni ni-square-pin"></i></span>
        </div>
        <%= f.text_field :language, class:"form-control", placeholder:"List your work language separed by coma il multiple" %>
      </div>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-warning my-4">submit</button>
    </div>
  <% end %>

</div>

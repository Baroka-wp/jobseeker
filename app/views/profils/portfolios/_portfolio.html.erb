<% if !@portfolios.empty? %>
  <div class="resume_card">
    <h4 class="heading-small text-purple mb-4"><i class="ni ni-ni-palette"></i> Portfolio </h4>
  </div>
  <ol>
    <% @portfolios.each do |portfolio| %>
    <li><a class="text-purple" href="<%= portfolio.portfolio_link %>"><%= portfolio.name %></a></li>
    <div class="row">
      <div class="col">
        <a class="btn btn-primary btn-sm" data-remote="true" data-method="get" href="<%= edit_portfolio_path(portfolio) %>"><%= fa_icon 'edit' %> Edit</a>
        <a class="btn btn-primary btn-sm" data-toggle="modal"
          data-target="#<%= deletion_modal_id(portfolio) %>">
          <%= fa_icon 'trash' %> Delete
        </a>
        <%= render partial: 'shared/modals/confirmation', locals: {
          id: deletion_modal_id(portfolio),
          title: 'Are you sure?',
          heading_1: "DANGER",
          heading_2: "You're are deleted your personnal infor:",
          path: portfolio_path(portfolio),
          method: 'delete',
          confirm_button: 'Delete'
        } %>
      </div>
    </div>
    <div class="">
      <small>
        <%= portfolio.description %>
      </small>
    </div>
     <div class="separateur"></div>
     <% end %>
  </ol>
<% end %>
